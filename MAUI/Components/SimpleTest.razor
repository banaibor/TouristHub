@* Simple test component to verify Blazor is working *@

<div style="background: #0A0A0B; color: #FFFFFF; min-height: 100vh; padding: 2rem; text-align: center; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;">
    <h1 style="color: #10B981; font-size: 2.5rem; margin-bottom: 1rem;">? Blazor is Working!</h1>
    
    <div style="background: #1E1E21; padding: 2rem; border-radius: 1rem; margin: 2rem 0; border: 1px solid #374151;">
        <h3 style="color: #FFFFFF; margin-bottom: 1rem;">MAUI Blazor WebView Test</h3>
        <p style="color: #B4B4B8; font-size: 1.1rem; margin-bottom: 1.5rem;">
            If you can see this, the Blazor WebView is successfully rendering components!
        </p>
        
        <div style="margin: 1rem 0;">
            <strong style="color: #10B981;">Platform:</strong> @GetPlatform()
        </div>
        <div style="margin: 1rem 0;">
            <strong style="color: #10B981;">Time:</strong> @DateTime.Now.ToString("HH:mm:ss")
        </div>
        <div style="margin: 1rem 0;">
            <strong style="color: #10B981;">Counter:</strong> @counter
        </div>
        
        <button @onclick="IncrementCounter" 
                style="background: linear-gradient(135deg, #6366F1, #8B5CF6); color: white; border: none; padding: 1rem 2rem; border-radius: 0.5rem; cursor: pointer; font-size: 1rem; font-weight: 600; margin: 1rem;">
            Click Me! (@counter)
        </button>
    </div>

    <div style="margin-top: 2rem;">
        <a href="/login" style="background: #059669; color: white; text-decoration: none; padding: 1rem 2rem; border-radius: 0.5rem; margin: 0.5rem; display: inline-block; font-weight: 600;">
            Go to Login
        </a>
        <a href="/diagnostic" style="background: #3B82F6; color: white; text-decoration: none; padding: 1rem 2rem; border-radius: 0.5rem; margin: 0.5rem; display: inline-block; font-weight: 600;">
            Go to Diagnostic
        </a>
    </div>
</div>

@code {
    private int counter = 0;

    protected override void OnInitialized()
    {
        System.Diagnostics.Debug.WriteLine("[SIMPLE TEST] SimpleTest component initialized successfully");
    }

    private void IncrementCounter()
    {
        counter++;
        System.Diagnostics.Debug.WriteLine($"[SIMPLE TEST] Counter incremented to: {counter}");
    }

    private string GetPlatform()
    {
#if ANDROID
        return "Android ??";
#elif IOS
        return "iOS ??";
#elif MACCATALYST
        return "MacCatalyst ??";
#elif WINDOWS
        return "Windows ??";
#else
        return "Unknown Platform";
#endif
    }
}